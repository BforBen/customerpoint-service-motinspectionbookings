@model IEnumerable<CustomerPoint.Service.MotInspections.Models.Booking>
<div class="col-md-4">
    <div class="form-group">
        <label>Vehicle registration</label>
        @Html.Hidden("VehicleReg", "")
        <p class="form-control-static"></p>
    </div>

    <div class="form-group">
        <label>Vehicle make</label>
        @Html.Hidden("VehicleMake", "")
        <p class="form-control-static"></p>
    </div>

    <div class="form-group">
        <label>Vehicle model</label>
        @Html.Hidden("VehicleModel", "")
        <p class="form-control-static"></p>
    </div>
</div>
@if (Settings.Internal)
{
<div class="col-md-5 col-md-offset-3">
    <h3 class="vehicle-history-title">Vehicle history</h3>
    @if (Model.Count() > 0)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li>@Html.DisplayFor(modelItem => item.Date) - @Html.DisplayFor(modelItem => item.Status)</li>
            }
        </ul>
    }
    else
    {
        <p>No previous bookings found.</p>
    }
</div>
}