@model IEnumerable<CustomerPoint.Service.MotInspections.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
    <p class="lead">Add and update customers</p>
</div>

<table class="table table-gbc table-editor table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Hidden)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Hidden)</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
            </tr>
        }
    </tbody>
</table>

@section secondary {
    <p class="text-right"><a title="Add new customer" href="@Url.Action("Create")" class="btn btn-default"><span class="glyphicon glyphicon-plus-sign"></span> Add new customer</a></p>
}