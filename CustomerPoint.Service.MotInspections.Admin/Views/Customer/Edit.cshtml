@model CustomerPoint.Service.MotInspections.Models.Customer

@{
    ViewBag.Title = "Edit customer";
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group @(Html.ValidationErrorFor(model => model.Name, "has-error"))">
        @Html.LabelFor(model => model.Name)
        @Html.DescriptionFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "help-block" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group @(Html.ValidationErrorFor(model => model.Description, "has-error"))">
        @Html.LabelFor(model => model.Description)
        @Html.DescriptionFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "help-block" })
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group @(Html.ValidationErrorFor(model => model.Hidden, "has-error"))">
        @Html.LabelFor(model => model.Hidden)
        @Html.DescriptionFor(model => model.Hidden)
        @Html.ValidationMessageFor(model => model.Hidden, "", new { @class = "help-block" })
        @Html.EditorFor(model => model.Hidden)
    </div>

    <div class="form-group @(Html.ValidationErrorFor(model => model.LedgerCode, "has-error"))">
        @Html.LabelFor(model => model.LedgerCode)
        @Html.DescriptionFor(model => model.LedgerCode)
        @Html.ValidationMessageFor(model => model.LedgerCode, "", new { @class = "help-block" })
        @Html.EditorFor(model => model.LedgerCode, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-lg btn-primary">Save</button>
    </div>
}

<p>@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-link" })</p>
